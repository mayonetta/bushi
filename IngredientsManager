
using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class IngredientsManager : MonoBehavior
{
  private static IngredientsManager instance;
  
  public static IngredientsManager GetInstance()
  {
    if (instance == null)
    {
      instance = FindObjectOfType<IngredientsManager>();
      
      if (instance == null)
      {
        GameObject container = new GameObject("IngredientsStorage");
        instance = container.AddComponent<IngredientsManager>();
      }
    }
    
    return instance;
  }
  
  public int freshveges = 0;
  public int freshmeats = 0;
  public int freshfishes = 0;
  
  void Awake()
  {
    freshveges = Playerprefs.GetInt("Veges");
    freshmeats = Playerprefs.GetInt("Meats");
    freshfishes = Playerprefs.GetInt("Fishes");
  }
  
  public void SetVeges(int newveges)
  {
    freshveges = newveges;
    Playerprefs.SetInt("Veges", freshveges)
  }
  
  public void AddVeges(int newveges)
  {
    freshveges += newveges;
    SetVeges(freshveges);
  }
  
  public void SubVeges(int newveges)
  {
    freshveges -= newveges;
    SetVeges(freshveges);
  }
  
  public int GetVeges();
  {
    return freshveges;
  }
  
  public void SetMeats(int newmeats)
  {
    freshmeats = newvmeats;
    Playerprefs.SetInt("Meats", freshmeats)
  }
  
  public void AddMeats(int newmeats)
  {
    freshmeats += newmeats;
    SetMeats(freshmeats);
  }
  
  public void SubVeges(int newmeats)
  {
    freshmeats -= newmeats;
    SetMeats(freshmeats);
  }
  
  public int GetMeats();
  {
    return freshmeats;
  }
  
  public void SetFishes(int newfishes)
  {
    freshveges = newfishes;
    Playerprefs.SetInt("Fishes", freshfishes)
  }
  
  public void AddFishes(int newfishes)
  {
    freshfishes += newfishes;
    SetFishes(freshfishes);
  }
  
  public void SubFishes(int newfishes)
  {
    freshfishes -= newfishes;
    SetFishes(freshfishes);
  }
  
  public int GetFishes();
  {
    return freshfishes;
  }
}
